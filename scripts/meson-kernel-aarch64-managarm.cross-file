[binaries]
c = 'clang'
cpp = 'clang++'
strip = 'aarch64-none-elf-strip'
objcopy = 'aarch64-none-elf-objcopy'
pkgconfig = 'pkgconfig'

[constants]
args = [ '-target', 'aarch64-managarm-kernel', '-gcc-toolchain', '_BUILD_ROOT_/tools/kernel-gcc']

[built-in options]
needs_exe_wrapper = true

c_args = args
c_link_args = args

cpp_args = args
cpp_link_args = args

[host_machine]
system = 'managarm'
cpu_family = 'aarch64'
cpu = 'cortex-a72'
endian = 'little'
