
#USB="-device piix3-usb-uhci"
USB="-device usb-ehci"

HDD="-drive file=image,if=virtio"
#HDD="-hda image"
HDD="$HDD -drive id=managarm,file=image2,if=none -device usb-storage,drive=managarm"

NET="-netdev user,id=net0 -device virtio-net,netdev=net0"
#NET="-netdev tap,id=net0 -device virtio-net,netdev=net0"

#USB="-device usb-mouse"

qemu-system-x86_64 $QFLAGS -smp 1 -m 1500 $USB $HDD $NET -vga std -debugcon stdio -s

